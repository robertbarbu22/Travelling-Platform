@model IEnumerable<Traveling_Platform.Models.Message>

@{
    ViewData["Title"] = "Index";
}

<h1>All Messages</h1>
<br />
<button id="orasNou">
    <a asp-action="Create">New Message</a>
</button>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_hotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClient)
            </td>
            <td>
                    <button id="details">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </button>
                    @if (User.IsInRole("Admin"))
                    {
                        <button id="edit">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </button>
                        <button id="delete">
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </button>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
