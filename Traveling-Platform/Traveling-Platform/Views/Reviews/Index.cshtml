@model List<Traveling_Platform.Models.ReviewViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.nume - Reviews</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               <p>Text</p>
            </th>
            <th>
                <p>Time</p>
            </th>
            <th>
                <p>ClientName</p>
            </th>
            <th>
                <p>HotelName</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.revs) {
        <tr>
            <td>
                <p>@item.Text</p>
            </td>
            <td>
                <p>@item.Time</p>
            </td>
            <td>
                <p>@item.ClientName</p>
            </td>
            <td>
                <p>@item.HotelName</p>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
