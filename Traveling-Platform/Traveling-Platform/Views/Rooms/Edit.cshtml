@model Traveling_Platform.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Room</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <label asp-for="DoubleBedsNumber" class="control-label">Double Beds Number</label>
                <input asp-for="DoubleBedsNumber" class="form-control" />
                <span asp-validation-for="DoubleBedsNumber" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <label asp-for="SingleBedsNumber" class="control-label">Single Beds Number</label>
                <input asp-for="SingleBedsNumber" class="form-control" />
                <span asp-validation-for="SingleBedsNumber" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <label asp-for="BunkBedsNumber" class="control-label">Bunk Beds Number</label>
                <input asp-for="BunkBedsNumber" class="form-control" />
                <span asp-validation-for="BunkBedsNumber" class="text-danger"></span>
            </div><br/>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasBalcony" /> @Html.DisplayNameFor(model => model.HasBalcony)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasBathroom" /> @Html.DisplayNameFor(model => model.HasBathroom)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasCookingEquipment" /> @Html.DisplayNameFor(model => model.HasCookingEquipment)
                </label>
            </div><br/>
            <div class="form-group">
                <label asp-for="PricePerNight" class="control-label">Price Per Night</label>
                <input asp-for="PricePerNight" class="form-control" />
                <span asp-validation-for="PricePerNight" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <input asp-for="IdHotel" class="form-control" type="hidden" />
                <span asp-validation-for="IdHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<button class="btn btn-primary">
    <a asp-action="Index">Back to List</a>
</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
