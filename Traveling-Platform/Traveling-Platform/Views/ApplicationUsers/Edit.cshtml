<head>
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>


@model Traveling_Platform.Models.ApplicationUser

@using (Html.BeginForm(actionName: "Edit", controllerName: "ApplicationUsers", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
{
    <i class="bi bi-person"></i>
    @Html.Label("UserName", "Nume utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.UserName)

    <br />
    <br />

    <i class="bi bi-envelope"></i>
    @Html.Label("Email", "Email utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.Email)

    <br />
    <br />

    <i class="bi bi-phone"></i>
    @Html.Label("PhoneNumber", "Numar telefon")

    <br />

    @Html.EditorFor(m => m.PhoneNumber)

    <br />
    <br />

    <i class="bi bi-phone"></i>
    @Html.Label("Firstname", "First name")

    <br />

    @Html.EditorFor(m => m.FirstName)

    <br />
    <br />

    <i class="bi bi-phone"></i>
    @Html.Label("LastName", "Last name")

    <br />

    @Html.EditorFor(m => m.LastName)

    <br />
    <br />
 

    <button id="editare" type="submit">Edit user</button>
}

