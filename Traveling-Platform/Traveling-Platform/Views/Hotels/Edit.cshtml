@model Traveling_Platform.Models.Hotel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Hotel</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_hotel" />
            <div class="form-group">
                <label asp-for="name" class="control-label">New Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div> <br/>
            <div class="form-group">
                <label asp-for="description" class="control-label">New Description</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">New Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div><br/>
            <div class="form-group">
                <input asp-for="id_city" class="form-control" type="hidden" />
                <span asp-validation-for="id_city" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="id_manager" class="form-control" type="hidden"/>
                <span asp-validation-for="id_manager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<button class="btn btn-primary">
    <a asp-action="Index">Back to List</a>
    </button>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
